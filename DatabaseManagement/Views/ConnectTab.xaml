<Grid x:Class="DatabaseManagement.Views.ConnectTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatabaseManagement.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding ConnectTabViewModel, Source={StaticResource Locator}}">
    <Grid>
        <TextBox Text="{Binding ConnectionString}" Width="200" Height="20" VerticalAlignment="top" HorizontalAlignment="Left" Margin="40"/>
        <Button Content="Connect" Command="{Binding ConnectCommand}" Width="80" Height="20" VerticalAlignment="top" HorizontalAlignment="Left" Margin="260, 40"/>
    </Grid>
</Grid>
